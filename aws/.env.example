# AWS Configuration
AWS_REGION=ap-northeast-1
AWS_PROFILE=default

# RDS Database Configuration
DB_HOST=your-rds-endpoint.xxxxxx.ap-northeast-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=16bp_production
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DB_SSL=true

# Database Connection Pool
DB_POOL_MAX=1
DB_POOL_MIN=0
DB_POOL_IDLE_TIMEOUT=30000

# Application Configuration
BASE_URL=https://16bodypersonalities.com
FROM_EMAIL=noreply@16bodypersonalities.com
NODE_ENV=production

# Statistics Cache
CACHE_TTL=300

# Deployment
STACK_NAME=16bp-backend-production
S3_BUCKET=16bp-deployment-production

# API Endpoint (デプロイ後に設定)
API_ENDPOINT=https://YOUR_API_ID.execute-api.ap-northeast-1.amazonaws.com/prod
